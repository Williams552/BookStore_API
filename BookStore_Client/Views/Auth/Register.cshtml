@model BookStore_Client.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" type="text/css" href="~/Accsess/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Accsess/css/fontawesome-all.min.css">
    <link rel="stylesheet" type="text/css" href="~/Accsess/css/iofrm-style.css">
    <link rel="stylesheet" type="text/css" href="~/Accsess/css/iofrm-theme34.css">
</head>
<body>
    <div class="form-body without-side">
        <div class="iofrm-layout">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items overflow-hidden">
                        <div class="item-container">
                            <div class="website-logo-inside less-margin">
                                <a href="index.html">
                                    <div class="logo">
                                        <img class="logo-size" src="images/logo-black.svg" alt="">
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="item-container bg-accent custom-borders">
                            <h3 class="font-md">Register new account</h3>
                        </div>
                        <div class="item-container">
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <p>@error.ErrorMessage</p>
                                    }
                                </div>
                            }
                            <form asp-action="Register" method="post">
                                <input class="form-control" type="text" asp-for="Username" placeholder="Username" required>
                                <input class="form-control" type="password" asp-for="Password" placeholder="Password" required>
                                <input class="form-control" type="email" asp-for="Email" placeholder="E-mail Address" required>
                                <input class="form-control" type="phone" asp-for="Phone" placeholder="Phone Number" required>
                                <div class="form-button d-flex">
                                    <button id="submit" type="submit" class="ibtn">Register</button>
                                </div>
                            </form>
                            <div class="page-links pt-3">
                                <a asp-controller="User" asp-action="Login">Login to account</a>
                            </div>
                        </div>
                        <div class="item-container bg-second custom-borders">
                            <div class="other-links social-with-title">
                                <div class="text me-0 mb-2">Or register with</div>
                                <a href="#"><i class="fab fa-facebook-f"></i>Facebook</a>
                                <a href="@Url.Action("GoogleLogin", "User")"><i class="fab fa-google"></i>Google</a>
                                <a href="#"><i class="fab fa-linkedin-in"></i>Linkedin</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Accsess/js/jquery.min.js"></script>
    <script src="~/Accsess/js/popper.min.js"></script>
    <script src="~/Accsess/js/bootstrap.bundle.min.js"></script>
    <script src="~/Accsess/js/main.js"></script>
</body>
</html>