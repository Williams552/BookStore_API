@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .verify-otp-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 400px;
            max-width: 100%;
            color: black;
        }

        h2 {
            margin-bottom: 20px;
            color: #764ba2;
            text-align: center;
        }

        .btn-primary {
            background: #764ba2;
            border: none;
        }

        .btn-secondary {
            background: #667eea;
            border: none;
        }

        .error-message {
            color: red;
            text-align: center;
            margin-top: 10px;
            display: none;
        }

        .success-message {
            color: green;
            text-align: center;
            margin-top: 10px;
            display: none;
        }

        #countdown {
            text-align: center;
            margin-top: 10px;
            font-weight: bold;
            color: #764ba2;
        }
    </style>
</head>
<body>
    <div class="verify-otp-container">
        <h2>Verify OTP</h2>
        <form id="verifyOtpForm">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="otp">Enter OTP</label>
                <input type="text" id="otp" name="otp" class="form-control" required placeholder="Enter 6-digit OTP" />
            </div>
            <input type="hidden" id="email" value="@ViewBag.Email" />
            <button type="submit" class="btn btn-primary">Verify OTP</button>
            <button type="button" id="resendOtpBtn" class="btn btn-secondary mt-2" style="display: none;">Resend OTP</button>
            <div id="countdown">Time remaining: 2:00</div>
            <div class="error-message" id="errorMessage"></div>
            <div class="success-message" id="successMessage"></div>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            let timeLeft = 120; // 2 minutes = 120 seconds
            let countdownTimer;

            function startCountdown() {
                $("#resendOtpBtn").hide();
                timeLeft = 120;
                $("#countdown").show();

                countdownTimer = setInterval(function () {
                    let minutes = Math.floor(timeLeft / 60);
                    let seconds = timeLeft % 60;
                    $("#countdown").text(`Time remaining: ${minutes}:${seconds < 10 ? "0" + seconds : seconds}`);

                    if (timeLeft <= 0) {
                        clearInterval(countdownTimer);
                        $("#countdown").hide();
                        $("#resendOtpBtn").show();
                    }
                    timeLeft--;
                }, 1000);
            }

            // Start countdown when the page loads
            startCountdown();

            $("#verifyOtpForm").submit(function (e) {
                e.preventDefault();

                var otp = $("#otp").val();
                var email = $("#email").val();
                if (!otp) {
                    $("#errorMessage").text("OTP is required.").show();
                    return;
                }

                $("#errorMessage").hide();
                $("#successMessage").hide();

                var formData = {
                    Email: email,
                    Otp: otp,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                };

                $.ajax({
                    url: "/Auth/VerifyOtpForPasswordReset",
                    type: "POST",
                    data: formData,
                    success: function (response) {
                        if (response.redirectTo) {
                            $("#successMessage").text("OTP verification successful.").show();
                            setTimeout(function () {
                                window.location.href = response.redirectTo;
                            }, 2000);
                        } else {
                            $("#errorMessage").text("An unknown error occurred.").show();
                        }
                    },
                    error: function (xhr) {
                        var errorMessage = "An error occurred while verifying OTP.";
                        if (xhr.responseJSON) {
                            if (xhr.responseJSON[""]) {
                                errorMessage = xhr.responseJSON[""][0];
                            } else if (xhr.responseJSON.message) {
                                errorMessage = xhr.responseJSON.message;
                            }
                        }
                        $("#errorMessage").text(errorMessage).show();
                    }
                });
            });

            $("#resendOtpBtn").click(function () {
                var email = $("#email").val();
                $("#errorMessage").hide();
                $("#successMessage").hide();

                var formData = {
                    Email: email,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                };

                $.ajax({
                    url: "/Auth/ResendOtp",
                    type: "POST",
                    data: formData,
                    dataType: "json", // Specify response as JSON
                    success: function (response) {
                        console.log("Resend OTP Success:", response); // Log for debugging
                        $("#successMessage").text(response.message || "A new OTP has been sent to your email.").show();
                        clearInterval(countdownTimer);
                        startCountdown();
                    },
                    error: function (xhr, status, error) {
                        console.log("Resend OTP Error:", xhr.responseText, status, error); // Log for debugging
                        var errorMessage = "An error occurred while resending OTP.";
                        if (xhr.responseJSON && xhr.responseJSON.Message) {
                            errorMessage = xhr.responseJSON.Message; // Changed from message to Message
                        }
                        $("#errorMessage").text(errorMessage).show();
                    }
                });
            });
        });
    </script>
</body>
</html>