<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/admin.css">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar bg-dark text-white">
            <h4 class="p-3 text-center">Admin Panel</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Order", "Admin")">📦 Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Category")">📂 Categories</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Book")">📖 Book</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Supplier")">🛒 Supplier</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Profile", "Admin")">👤 Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Card", "Admin")">💳 Author</a>
                </li>

            </ul>

            <div class="d-grid p-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-danger">🚪 Logout</a>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="main-content p-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@if (User.Identity.IsAuthenticated)
{
    <p>Welcome, @User.Identity.Name!</p>
    <a asp-controller="Account" asp-action="Logout">Logout</a>
}
else
{
    <a asp-controller="Account" asp-action="Login">Login</a>
}
