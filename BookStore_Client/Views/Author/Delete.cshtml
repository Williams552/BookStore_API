@model BookStore_Client.Models.Author

@{
    ViewData["Title"] = "Delete Author";
}
@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this author?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.AuthorID</dd>

        <dt class="col-sm-2">Full Name:</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Biography:</dt>
        <dd class="col-sm-10">@Model.Biography</dd>

        <dt class="col-sm-2">Image:</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
                <img src="@Model.ImageURL" alt="@Model.FullName" width="150" height="150">
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AuthorID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
