@model IEnumerable<BookStore_Client.Models.Author>

@{
    ViewData["Title"] = "List of Authors";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">List of Authors</h4>
                    <a asp-action="Create" class="btn btn-success btn-sm">Add New Author</a>
                </div>
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Full Name</th>
                                    <th scope="col">Image</th>
                                    <th scope="col" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var author in Model)
                                    {
                                        <tr>
                                            <td>@author.AuthorID</td>
                                            <td>@author.FullName</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(author.ImageURL))
                                                {
                                                    <img src="@author.ImageURL" alt="@author.FullName" class="img-fluid rounded" style="max-width: 50px; max-height: 50px;" />
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No image available</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a asp-action="Details" asp-route-id="@author.AuthorID" class="btn btn-info btn-sm me-1">View</a>
                                                <a asp-action="Edit" asp-route-id="@author.AuthorID" class="btn btn-warning btn-sm me-1">Edit</a>
                                                <a asp-action="Delete" asp-route-id="@author.AuthorID" class="btn btn-danger btn-sm">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">No authors found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>