@model BookStore_Client.Models.Author

@{
    ViewData["Title"] = "Thêm tác giả mới";
}
@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FullName" class="control-label">Họ tên</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Biography" class="control-label">Tiểu sử</label>
        <textarea asp-for="Biography" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="ImageURL" class="control-label">URL ảnh</label>
        <input asp-for="ImageURL" class="form-control" />
    </div>

    <br>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
