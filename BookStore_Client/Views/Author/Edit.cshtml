@model BookStore_Client.Models.Author

@{
    ViewData["Title"] = "Chỉnh sửa tác giả";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-white text-center">
                    <h4 class="mb-0">Edit: @Model.FullName</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="AuthorID" />
                        <div class="row g-4">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label fw-semibold text-muted">Họ tên</label>
                                    <input asp-for="FullName" class="form-control form-control-lg" required placeholder="Nhập họ tên tác giả" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Biography" class="form-label fw-semibold text-muted">Tiểu sử</label>
                                    <textarea asp-for="Biography" class="form-control form-control-lg" rows="4" placeholder="Nhập tiểu sử tác giả"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="ImageURL" class="form-label fw-semibold text-muted">URL ảnh</label>
                                    <input asp-for="ImageURL" class="form-control form-control-lg" placeholder="https://example.com/image.jpg" />
                                </div>
                            </div>
                        </div>
                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-primary btn-lg me-2">Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>