@model BookStore_Client.Models.Author

@{
    ViewData["Title"] = "Author Details";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Author Details</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@Model.FullName</h4>
        </div>
        <div class="card-body">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th scope="row" class="text-muted">ID:</th>
                        <td>@Model.AuthorID</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-muted">Biography:</th>
                        <td>@Model.Biography</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-muted">Image:</th>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.ImageURL))
                            {
                                <img src="@Model.ImageURL" alt="@Model.FullName" width="150" height="150" class="img-thumbnail">
                            }
                            else
                            {
                                <span>No image available</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary me-2">Back to List</a>
            <a asp-action="Edit" asp-route-id="@Model.AuthorID" class="btn btn-warning">Edit</a>
        </div>
    </div>
</div>
