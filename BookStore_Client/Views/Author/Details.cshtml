@model BookStore_Client.Models.Author

@{
    ViewData["Title"] = "Author Details";
}
@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.AuthorID</dd>

        <dt class="col-sm-2">Full Name:</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Biography:</dt>
        <dd class="col-sm-10">@Model.Biography</dd>

        <dt class="col-sm-2">Image:</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
                <img src="@Model.ImageURL" alt="@Model.FullName" width="150" height="150">
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back</a>
<a asp-action="Edit" asp-route-id="@Model.AuthorID" class="btn btn-warning">Edit</a>
