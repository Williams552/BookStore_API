@model BookStore_Client.Models.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Book Details";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<h2>Book Details</h2>

<div>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Stock:</strong> @Model.Stock</p>
    <p><strong>Public Date:</strong> @Model.PublicDate?.ToString("yyyy-MM-dd")</p>
    <p><strong>UpdateBy:</strong> @Model.UpdateBy</p>
    <p><strong>Update Date:</strong> @Model.UpdateAt?.ToString("yyyy-MM-dd")</p>
    <p><strong>Author:</strong> @Model.AuthorName</p>
    <p><strong>Category:</strong> @Model.CategoryName</p>
    <p><strong>Supplier:</strong> @Model.SupplierName</p>
    <p><img src="@Model.ImageURL" alt="Book Image" style="max-width:200px;" /></p>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
<a asp-action="Edit" asp-route-id="@Model.BookID" class="btn btn-warning">Edit</a>