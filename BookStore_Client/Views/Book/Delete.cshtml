@model BookStore_Client.Models.Book

@{
    ViewData["Title"] = "Delete Book";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<h2>Delete Book</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this book?</h4>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Price:</strong> @Model.Price?.ToString("C")</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Stock:</strong> @Model.Stock</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="BookID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
