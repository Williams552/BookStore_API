@model BookStore_Client.Models.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Edit Book";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<div class="container mt-4">

    <div class="card shadow-sm">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0">Edit: @Model.Title</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="BookID" />
                <div class="row">
                    <!-- Cột trái -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold">Price</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Stock" class="form-label fw-bold">Stock</label>
                            <input asp-for="Stock" type="number" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="ImageURL" class="form-label fw-bold">Image URL</label>
                            <input asp-for="ImageURL" class="form-control" type="text" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <!-- Cột phải -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PublicDate" class="form-label fw-bold">Public Date</label>
                            <input asp-for="PublicDate" class="form-control" type="date" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="UpdateBy" class="form-label fw-bold">Update By</label>
                            <input asp-for="UpdateBy" class="form-control" type="number" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="UpdateAt" class="form-label fw-bold">Update At</label>
                            <input asp-for="UpdateAt" class="form-control" type="date" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="AuthorID" class="form-label fw-bold">Author</label>
                            <select asp-for="AuthorID" class="form-control" required>
                                <option value="">-- Select Author --</option>
                                @if (Model.Authors != null)
                                {
                                    @foreach (var author in Model.Authors)
                                    {
                                        <option value="@author.AuthorID" selected="@(author.AuthorID == Model.AuthorID)">
                                            @author.FullName
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CategoryID" class="form-label fw-bold">Category</label>
                            <select asp-for="CategoryID" class="form-control" required>
                                <option value="">-- Select Category --</option>
                                @if (Model.Categories != null)
                                {
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.CategoryID" selected="@(category.CategoryID == Model.CategoryID)">
                                            @category.CategoryName
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SupplierID" class="form-label fw-bold">Supplier</label>
                            <select asp-for="SupplierID" class="form-control" required>
                                <option value="">-- Select Supplier --</option>
                                @if (Model.Suppliers != null)
                                {
                                    @foreach (var supplier in Model.Suppliers)
                                    {
                                        <option value="@supplier.SupplierID" selected="@(supplier.SupplierID == Model.SupplierID)">
                                            @supplier.SupplierName
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary me-2">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>