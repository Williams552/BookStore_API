@model BookStore_Client.Models.Category

@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Category Details</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@Model.CategoryName</h4>
        </div>
        <div class="card-body">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th scope="row" class="text-muted">Category ID:</th>
                        <td>@Model.CategoryID</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-muted">Description:</th>
                        <td>@Model.Description</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary me-2">Back to List</a>
            <a asp-action="Edit" asp-route-id="@Model.CategoryID" class="btn btn-warning">Edit</a>
        </div>
    </div>
</div>