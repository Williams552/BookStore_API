@model List<BookStore_Client.Models.Category>

@{
    ViewData["Title"] = "Category List";
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Category List</h4>
                    <a asp-action="Create" class="btn btn-success btn-sm">Add New Category</a>
                </div>
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Category ID</th>
                                    <th scope="col">Category Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td>@category.CategoryID</td>
                                            <td>@category.CategoryName</td>
                                            <td>@category.Description</td>
                                            <td class="text-center">
                                                <a asp-action="Details" asp-route-id="@category.CategoryID" class="btn btn-info btn-sm me-1">View</a>
                                                <a asp-action="Edit" asp-route-id="@category.CategoryID" class="btn btn-warning btn-sm me-1">Edit</a>
                                                <a asp-action="Delete" asp-route-id="@category.CategoryID" class="btn btn-danger btn-sm">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">No categories found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>