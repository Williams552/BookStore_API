@model BookStore_API.Models.User

@{
    Layout = "~/Views/Shared/_layoutprofile.cshtml";
    ViewData["Title"] = "Edit Profile";
}

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5" width="150px" src="@(Model?.ImageUrl ?? "https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg")">
                <span class="font-weight-bold">@(Model?.FullName ?? "N/A")</span>
                <span class="text-black-50">@(Model?.Email ?? "N/A")</span>
            </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Edit Profile</h4>
                </div>
                <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Username" />
                    <input type="hidden" asp-for="UserID" />
                    <input type="hidden" asp-for="Email" /> <!-- Giữ email không đổi -->
                    <div class="row mt-3">
                        <!-- Thêm trường upload ảnh -->
                        <div class="col-md-12">
                            <label class="labels">Profile Picture</label>
                            <input type="file" class="form-control" name="ImageFile" accept="image/*" />
                            <input type="hidden" asp-for="ImageUrl" /> <!-- Giữ giá trị ImageUrl hiện tại -->
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Full Name</label>
                            <input type="text" class="form-control" asp-for="FullName" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Phone</label>
                            <input type="text" class="form-control" asp-for="Phone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Email</label>
                            <p class="form-control-static">@Model.Email</p> <!-- Chỉ hiển thị, không cho sửa -->
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Address</label>
                            <input type="text" class="form-control" asp-for="Address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Gender</label>
                            <select class="form-control" asp-for="Gender">
                                <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mt-5 text-center">
                        <button class="btn btn-primary profile-button" type="submit">Save Changes</button>
                        <a asp-action="Profile" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center">
                    <span>Additional Information</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}